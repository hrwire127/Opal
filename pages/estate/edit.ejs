<% layout('layout/biolerplate') %>
    <div class="row mb-5">
        <h1 class="text-center">Edit <%=estate.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/estates/<%=estate._id%>?_method=PUT" method="POST" class="validated-form" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="estate[title]" value="<%=estate.title%>"
                        required>
                    <div class="valid-feedback">
                        Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="estate[location]"
                        value="<%=estate.location%>" required>
                    <div class="valid-feedback">
                        Good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add Images</label>
                    <input type="file" name="image" id="image" multiple>
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label">Add Images</label>
                    <input class="form-control" name="image" type="file" id="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price" id="price-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" id="price" class="form-control" placeholder="0.00"
                            aria-describedby="price-label" name="estate[price]" value="<%=estate.price%>" required>
                    </div>
                    <div class="valid-feedback">
                        Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description Url</label>
                    <textarea class="form-control" type="text" id="description" name="estate[description]"
                        required><%=estate.description%> </textarea>
                    <div class="valid-feedback">
                        Good!
                    </div>
                </div>
                <div class="mb-3">
                    <% estate.images.forEach(function(img, i){ %>
                        <% console.log(img.thumbnail) %> 
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input id="image-<%=i%>" type="checkbox" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>